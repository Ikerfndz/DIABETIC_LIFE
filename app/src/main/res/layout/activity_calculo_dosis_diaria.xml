<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculoDosisDiaria"
    android:background="@color/fondoPantallas">

    <Button
        android:id="@+id/atrasDoDiariaButton"
        android:layout_width="134dp"
        android:layout_height="63dp"
        android:backgroundTint="@color/purple"
        android:text="Atras"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="438dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423">

        <TextView
            android:id="@+id/dosisDiariaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOSIS DIARIA"

            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="36sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/kgETxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/custom_edittext"

            android:drawablePadding="8dp"
            android:hint="kG (0.0)*"

            android:padding="8dp"
            android:textColor="@color/purple"
            android:textColorHighlight="@color/cardview_dark_background" />

        <Button
            android:id="@+id/CalculoDoDiariaButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/purple"
            android:text="CALCULAR"
            android:textSize="18sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/DiariaText"
            android:layout_width="347dp"
            android:layout_height="139dp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="36sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>