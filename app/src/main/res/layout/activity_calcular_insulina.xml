<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcularInsulina"
    android:background="@color/fondoPantallas">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/white"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>


    <TextView
        android:id="@+id/dosisText"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="639dp"
        android:text="CALCULADORA"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="150dp"

        android:text="Selecciona uno de los diferentes calculos que tiene nuestra aplicacion. "
        android:textSize="16sp" />


    <Button
        android:id="@+id/botonDosisDiaria"
        android:layout_width="350dp"
        android:layout_height="70dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="260dp"

        android:backgroundTint="@color/purple_masOscurro"
        android:text="DOSIS DIARIA"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/botonCalculoCHO"
        android:layout_width="350dp"
        android:layout_height="70dp"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="380dp"


        android:backgroundTint="@color/purple_medioOscuro"
        android:text="COBERTURA CHO"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/botonCalculoCorreccion"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_marginLeft="6dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="38dp"

        android:layout_marginRight="6dp"
        android:backgroundTint="@color/purple"
        android:text="FACTOR DE CORECCIÃ“N"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:cornerRadius="20dp" />

</RelativeLayout>